/**
*   Form group
*
*
*
*   @class     .form-group
*   @children
*   @states
*   @mutators
*/
.form-group {

  /**
  *   .form-group
  *
  *   Main style.
  */
  & {
    display flex
  }

  +below(768px) {
    & {
      flex-direction column
    }

  }

  /**
  *   Children
  */
  & > .form-element {
    flex 1
    border-radius 0
    border-right-color transparent

    +below(768px) {
      &, &:first-child, &:last-child {
        flex 1
        margin .25rem 0
        border-right-color _light
        border-radius _border-radius
      }
    }
  }
  & > :first-child {
    border-right-color transparent
    border-radius _border-radius 0 0 _border-radius
  }
  & > :last-child {
    border-right-color _light
    border-radius 0 _border-radius _border-radius 0
  }

  & > .button {
    display flex
    align-items center
    justify-content center

    +below(768px) {
      flex 1
      width 100%
      border-radius _border-radius
    }
  }

  /**
  *   States
  */

  /**
  *   Mutators
  */

}