/**
*   Navbar
*
*
*
*   @class     .navbar
*   @children
*   @states
*   @mutators
*/
.navbar {

  /**
  *   .navbar
  *
  *   Main style.
  */
  & {
    top 0
    left 0
    margin 0
    z-index 100
    display flex
    position relative
    align-items center
    margin-bottom 1rem
    padding .50rem 1rem
    align-content center
    justify-content space-between
  }

  /**
  *   Children
  */
  & a {
    color _white !important
    transition color .15s

    &:hover {
      color _primary-l2 !important
    }
  }
  .is-logo {
    min-width 2rem
    min-height 2rem
    margin-right 1rem
    display inline-block
    background center url('/images/logo.png') no-repeat
    background-size cover
  }
  .navbar-menu {
    display flex
    align-items center
    justify-content space-between

    & li {
      white-space nowrap
      margin 0 .50rem
    }
  }
  .navbar-left {
    display flex
    align-items center
    justify-content center
  }
  .navbar-center {
    flex 1
    display flex
    align-items center
    justify-content center
  }
  .navbar-right {
    display flex
    align-items center
    justify-content center
  }

