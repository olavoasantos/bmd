/**
*   Slide
*
*   @class     .slide
*   @children
*   @states
*   @mutators
*/
.slide {

  /**
  *   .slide
  *
  *   Main style.
  */
  & {
    opacity 0
  }

  /**
  *   Children
  */

  /**
  *   States
  */
  &.is-active {
    opacity 1
  }


  /**
  *   Mutators
  */
  &.is-center {
    text-align center
  }
  &.is-left {
    text-align left
  }
  &.is-right {
    text-align right
  }

}