/** Font weight **/
_weight-normal = 400;
_weight-bold = 700;
_weight-title-normal = 700;
_weight-title-thin = 300;

/** Font size **/
_font-size-xxl = 2.625rem;
_font-size-xl = 1.75rem;
_font-size-lg = 1.375rem;
_font-size-md = 1.125rem;
